@model IEnumerable<Game>

@{
    ViewData["Title"] = "Games";
}

@if(!Model.Any()){
    <div class="alert alert-warning mt-4">
        <h4 class="alert-heading">No Games</h4>
        <p class="mb-0"> No Games Added Yet!</p>
    </div>
}
else{
    <div class="row mt-5">
            @foreach(var game in Model){
                <div class="col-md-6 col-lg-4">
                        <a class="card border-secondary mb-3 text-decoration-none rounded-3 overflow-hidden"style="padding:0" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                            <div class="card-body" style="background-image: url(@($"{FileSettings.ImagePath}/{game.Cover}")); background-size:cover;background-position:center;height:450px">
                                <span class="badge bg-danger">@game.category.Name</span>
                            </div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
						        <h5>@game.Name</h5>
                                <div>
                                    @foreach (var device in game.Devices)
                                    {
                                        <i class="@device.Device.Icon me-2 fs-4"></i>
                                    }
                                </div>
                            </div>
                        </a>
                </div>
            }
    </div>
}